<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020073"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cachimbo Ya!"
                android:textColor="#FF8A65"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#020073"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="wrap_content"
            android:layout_height="188dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/portada" />

        <ImageButton
            android:id="@+id/imagebuttonSA"
            android:layout_width="335dp"
            android:layout_height="112dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mp1" />

        <ImageButton
            android:id="@+id/imagebuttonBV"
            android:layout_width="335dp"
            android:layout_height="105dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mp2" />

        <ImageButton
            android:id="@+id/imagebuttonDP"
            android:layout_width="337dp"
            android:layout_height="107dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mp3" />

        <ImageButton
            android:id="@+id/imagebuttonAE"
            android:layout_width="338dp"
            android:layout_height="97dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mp4" />

    </LinearLayout>

</LinearLayout>
